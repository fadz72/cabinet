.wrapper_with_padding
	#docs.clearfix
		- unless @docs.blank?
			- @docs.each do |doc|
				%a{href: (url_for [doc])}
					.doc
						%p.title= doc.title
						%p.doc= time_ago_in_words(doc.created_at)
						%p.comtent= truncate(doc.content, length:50)
		- else
		%h2 Creat Doc!
		%p Start Creating Documents and Organizing Your Life!
		%button= link_to "Create Doc", new_doc_path


